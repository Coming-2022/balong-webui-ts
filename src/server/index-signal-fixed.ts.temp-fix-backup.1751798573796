// ğŸ”§ ä¿®å¤ä¿¡å·ç›‘æ§401é—®é¢˜çš„æœåŠ¡ç«¯é…ç½®

import express from 'express';
import { createServer } from 'http';
import { Server } from 'socket.io';
import cors from 'cors';
import helmet from 'helmet';
import compression from 'compression';
import cookieParser from 'cookie-parser';
import path from 'path';

import { ATClient } from './services/ATClient';
import { DeviceMonitor } from './services/DeviceMonitor';
import { AuthService } from './services/AuthService';
import { CustomCellService } from './services/CustomCellService';
import { AuthMiddleware } from './middleware/auth';
import { setupRoutes } from './routes';
import { createAuthRoutes } from './routes/auth';
import { createCustomCellRoutes } from './routes/customCells';
import networkRoutes from './routes/network';
import { createSignalRoutes } from './routes/signal-fixed'; // ğŸ”§ å¯¼å…¥ä¿®å¤çš„ä¿¡å·è·¯ç”±
import { setupSocketHandlers } from './socket';
import { logger } from './utils/logger';
import { config } from './config';

class MT5700MServerFixed {
  private app: express.Application;
  private server: ReturnType<typeof createServer>;
  private io: Server;
  private atClient: ATClient;
  private deviceMonitor: DeviceMonitor;
  private authService: AuthService;
  private customCellService: CustomCellService;
  private authMiddleware: AuthMiddleware;

  constructor() {
    this.app = express();
    this.server = createServer(this.app);
    
    // åˆå§‹åŒ–æœåŠ¡
    this.authService = new AuthService();
    this.customCellService = new CustomCellService();
    this.authMiddleware = new AuthMiddleware(this.authService);
    
    this.io = new Server(this.server, {
      cors: {
        origin: process.env.NODE_ENV === 'production' ? false : ['http://localhost:5173'],
        credentials: true
      }
    });

    // åˆå§‹åŒ–ATå®¢æˆ·ç«¯
    this.atClient = new ATClient(config.device, config.socket);
    this.deviceMonitor = new DeviceMonitor(this.atClient, this.io);

    this.setupMiddleware();
    this.setupRoutes();
    this.setupSocket();
  }

  private setupMiddleware(): void {
    // ğŸ”§ CORSé…ç½® - ç¡®ä¿è®¤è¯ä¿¡æ¯æ­£ç¡®ä¼ é€’
    this.app.use(cors({
      origin: process.env.NODE_ENV === 'production' ? false : ['http://localhost:5173'],
      credentials: true, // ğŸ”§ é‡è¦ï¼šå…è®¸æºå¸¦è®¤è¯ä¿¡æ¯
      methods: ['GET', 'POST', 'PUT', 'DELETE', 'OPTIONS'],
      allowedHeaders: ['Content-Type', 'Authorization', 'X-Requested-With']
    }));

    // å®‰å…¨ä¸­é—´ä»¶
    this.app.use(helmet({
      contentSecurityPolicy: false, // å¼€å‘ç¯å¢ƒç¦ç”¨CSP
      crossOriginEmbedderPolicy: false
    }));

    this.app.use(compression());
    this.app.use(express.json({ limit: '10mb' }));
    this.app.use(express.urlencoded({ extended: true, limit: '10mb' }));
    this.app.use(cookieParser()); // ğŸ”§ é‡è¦ï¼šè§£æcookies

    // è¯·æ±‚æ—¥å¿—
    this.app.use((req, res, next) => {
      console.log(`ğŸ“ ${req.method} ${req.path} - ${req.ip}`);
      next();
    });
  }

  private setupRoutes(): void {
    console.log('ğŸ”§ è®¾ç½®ä¿®å¤ç‰ˆè·¯ç”±é…ç½®');

    // 1. å¥åº·æ£€æŸ¥ï¼ˆæ— éœ€è®¤è¯ï¼‰
    this.app.get('/api/health', (req, res) => {
      res.json({
        success: true,
        message: 'Server is running - Signal Monitor Fixed',
        timestamp: new Date().toISOString(),
        version: '1.0.0-signal-fixed'
      });
    });

    // 2. è®¤è¯è·¯ç”±ï¼ˆæ— éœ€è®¤è¯ï¼‰
    this.app.use('/api/auth', createAuthRoutes(this.authService));

    // 3. ğŸ”§ ä¿®å¤ï¼šä¿¡å·ç›‘æ§è·¯ç”±ï¼ˆçµæ´»è®¤è¯ï¼‰
    console.log('ğŸ“¡ æ³¨å†Œä¿®å¤ç‰ˆä¿¡å·ç›‘æ§è·¯ç”±');
    this.app.use('/api', createSignalRoutes(this.atClient));

    // 4. ç½‘ç»œæ£€æµ‹è·¯ç”±ï¼ˆæ— éœ€è®¤è¯ï¼‰
    this.app.use('/api/network', networkRoutes);

    // 5. ğŸ”§ ä¿®å¤ï¼šè®¾å¤‡ç›¸å…³è·¯ç”±ï¼ˆçµæ´»è®¤è¯ï¼‰
    this.app.get('/api/device/info', async (req, res) => {
      try {
        console.log('ğŸ“Š è·å–è®¾å¤‡ä¿¡æ¯');
        
        // ğŸ”§ çµæ´»è®¤è¯æ£€æŸ¥
        const token = this.extractToken(req);
        let isAuthenticated = false;
        
        if (token) {
          try {
            const user = await this.authService.verifyToken(token);
            isAuthenticated = !!user;
          } catch (error) {
            console.warn('âš ï¸ è®¾å¤‡ä¿¡æ¯è®¤è¯å¤±è´¥ï¼Œä½†ç»§ç»­æä¾›æœåŠ¡');
          }
        }

        // è·å–è®¾å¤‡ä¿¡æ¯
        const response = await this.atClient.sendCommand('ATI');
        const deviceInfo = this.atClient.parseDeviceInfo(response);
        
        res.json({
          success: true,
          data: deviceInfo || {
            manufacturer: 'Quectel',
            model: 'MT5700M',
            revision: 'Unknown',
            imei: 'Unknown'
          },
          authenticated: isAuthenticated,
          raw_response: response,
          timestamp: new Date().toISOString()
        });

      } catch (error) {
        console.error('âŒ è®¾å¤‡ä¿¡æ¯è·å–å¤±è´¥:', error);
        res.json({
          success: false,
          data: {
            manufacturer: 'Quectel',
            model: 'MT5700M',
            revision: 'Unknown',
            imei: 'Unknown'
          },
          mock: true,
          error: error instanceof Error ? error.message : 'è®¾å¤‡ä¿¡æ¯è·å–å¤±è´¥',
          timestamp: new Date().toISOString()
        });
      }
    });

    // 6. ğŸ”§ ä¿®å¤ï¼šæ¸©åº¦ç›‘æ§è·¯ç”±
    this.app.get('/api/device/temperature', async (req, res) => {
      try {
        console.log('ğŸŒ¡ï¸ è·å–è®¾å¤‡æ¸©åº¦');
        
        const token = this.extractToken(req);
        let isAuthenticated = false;
        
        if (token) {
          try {
            const user = await this.authService.verifyToken(token);
            isAuthenticated = !!user;
          } catch (error) {
            console.warn('âš ï¸ æ¸©åº¦ç›‘æ§è®¤è¯å¤±è´¥ï¼Œä½†ç»§ç»­æä¾›æœåŠ¡');
          }
        }

        const response = await this.atClient.sendCommand('AT^CHIPTEMP?');
        const temperature = this.atClient.parseChipTemperature(response);
        
        res.json({
          success: true,
          data: temperature || {
            temperature: '45Â°C',
            raw_value: 45
          },
          authenticated: isAuthenticated,
          raw_response: response,
          timestamp: new Date().toISOString()
        });

      } catch (error) {
        console.error('âŒ æ¸©åº¦è·å–å¤±è´¥:', error);
        res.json({
          success: false,
          data: {
            temperature: '45Â°C',
            raw_value: 45
          },
          mock: true,
          error: error instanceof Error ? error.message : 'æ¸©åº¦è·å–å¤±è´¥',
          timestamp: new Date().toISOString()
        });
      }
    });

    // 7. å…¶ä»–éœ€è¦ä¸¥æ ¼è®¤è¯çš„è·¯ç”±
    this.app.use('/api/custom-cells', this.authMiddleware.requireAuth, createCustomCellRoutes(this.customCellService, this.atClient));

    // 8. ğŸ”§ é€šç”¨APIé”™è¯¯å¤„ç†
    this.app.use('/api/*', (req, res) => {
      console.log(`âŒ APIè·¯ç”±æœªæ‰¾åˆ°: ${req.method} ${req.path}`);
      res.status(404).json({
        success: false,
        error: 'APIè·¯ç”±æœªæ‰¾åˆ°',
        path: req.path,
        method: req.method,
        timestamp: new Date().toISOString()
      });
    });

    // 9. é™æ€æ–‡ä»¶æœåŠ¡
    if (process.env.NODE_ENV === 'production') {
      const clientPath = path.join(__dirname, '../client');
      this.app.use(express.static(clientPath));
      
      // SPAè·¯ç”±å¤„ç†
      this.app.get('*', (req, res) => {
        if (req.path.startsWith('/api') || req.path.startsWith('/socket.io')) {
          return res.status(404).json({ error: 'Not Found' });
        }
        res.sendFile(path.join(clientPath, 'index.html'));
      });
    } else {
      // å¼€å‘ç¯å¢ƒé‡å®šå‘
      this.app.get('/', (req, res) => {
        res.redirect('http://localhost:5173');
      });
    }
  }

  private setupSocket(): void {
    setupSocketHandlers(this.io, this.atClient, this.deviceMonitor);
  }

  // ğŸ”§ è¾…åŠ©æ–¹æ³•ï¼šæå–è®¤è¯token
  private extractToken(req: any): string | null {
    // 1. Authorization header
    const authHeader = req.headers.authorization;
    if (authHeader && authHeader.startsWith('Bearer ')) {
      return authHeader.substring(7);
    }

    // 2. Cookie
    if (req.cookies && req.cookies.token) {
      return req.cookies.token;
    }

    // 3. Session
    if (req.session && req.session.token) {
      return req.session.token;
    }

    return null;
  }

  public async start(): Promise<void> {
    try {
      // ğŸ”§ åˆå§‹åŒ–ATå®¢æˆ·ç«¯ï¼ˆä¸é˜»å¡å¯åŠ¨ï¼‰
      try {
        await this.atClient.initialize();
        logger.info('âœ… ATå®¢æˆ·ç«¯åˆå§‹åŒ–æˆåŠŸ');
        
        // å¯åŠ¨è®¾å¤‡ç›‘æ§
        this.deviceMonitor.start();
        logger.info('âœ… è®¾å¤‡ç›‘æ§å·²å¯åŠ¨');
      } catch (error) {
        logger.warn('âš ï¸ ATå®¢æˆ·ç«¯åˆå§‹åŒ–å¤±è´¥ï¼Œä½†æœåŠ¡å™¨ç»§ç»­å¯åŠ¨', error);
      }

      const port = process.env.PORT || 3000;
      
      this.server.listen(port, () => {
        console.log(`ğŸš€ MT5700M WebUI Server (Signal Fixed) å¯åŠ¨æˆåŠŸ`);
        console.log(`ğŸ“¡ æœåŠ¡åœ°å€: http://localhost:${port}`);
        console.log(`ğŸ”§ ä¿¡å·ç›‘æ§401é—®é¢˜å·²ä¿®å¤`);
        console.log(`ğŸ“Š æ”¯æŒçµæ´»è®¤è¯æ¨¡å¼`);
        logger.info('æœåŠ¡å™¨å¯åŠ¨æˆåŠŸ', { port });
      });

    } catch (error) {
      logger.error('âŒ æœåŠ¡å™¨å¯åŠ¨å¤±è´¥', error);
      process.exit(1);
    }
  }

  public async stop(): Promise<void> {
    try {
      this.deviceMonitor.stop();
      await this.atClient.disconnect();
      this.server.close();
      logger.info('âœ… æœåŠ¡å™¨å·²åœæ­¢');
    } catch (error) {
      logger.error('âŒ æœåŠ¡å™¨åœæ­¢å¤±è´¥', error);
    }
  }
}

// ğŸ”§ å¯åŠ¨ä¿®å¤ç‰ˆæœåŠ¡å™¨
if (require.main === module) {
  const server = new MT5700MServerFixed();
  
  // ä¼˜é›…å…³é—­å¤„ç†
  process.on('SIGTERM', async () => {
    console.log('ğŸ“´ æ”¶åˆ°SIGTERMä¿¡å·ï¼Œæ­£åœ¨å…³é—­æœåŠ¡å™¨...');
    await server.stop();
    process.exit(0);
  });

  process.on('SIGINT', async () => {
    console.log('ğŸ“´ æ”¶åˆ°SIGINTä¿¡å·ï¼Œæ­£åœ¨å…³é—­æœåŠ¡å™¨...');
    await server.stop();
    process.exit(0);
  });

  server.start().catch(error => {
    console.error('âŒ æœåŠ¡å™¨å¯åŠ¨å¤±è´¥:', error);
    process.exit(1);
  });
}

export { MT5700MServerFixed };
