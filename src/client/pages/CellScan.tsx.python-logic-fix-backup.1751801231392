                    alert(`å®Œæ•´æµç¨‹æµ‹è¯•å¤±è´¥:\n${error instanceof Error ? error.message : 'æœªçŸ¥é”™è¯¯'}`);
                    setScanProgress(null);
                  }, 1000);
                } finally {
                  setIsInitializing(false);
                }
