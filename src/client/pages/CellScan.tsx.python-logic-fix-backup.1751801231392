import React, { useState, useEffect } from 'react';
import { useSocket } from '../hooks/useSocket';

interface ScanProgress {
  stage: 'init' | 'scan';
  message: string;
  progress: number;
}

interface ScanResult {
  rat: string;
  plmn: string;
  freq: number;
  pci: number;
  band: number;
  lac: number;
  scs: string;
  rsrp: number;
  rsrq: number;
  sinr: number;
  lte_sinr: number;
  timestamp: string;
}

interface SortConfig {
  key: keyof ScanResult;
  direction: 'asc' | 'desc';
}

export default function CellScan() {
  const [isScanning, setIsScanning] = useState(false);
  const [isInitializing, setIsInitializing] = useState(false);
  const [isInitialized, setIsInitialized] = useState(false); // æ·»åŠ åˆå§‹åŒ–çŠ¶æ€
  const [scanResults, setScanResults] = useState<ScanResult[]>([]);
  const [scanProgress, setScanProgress] = useState<ScanProgress | null>(null);
  const [error, setError] = useState<string | null>(null);
  const [lastScanTime, setLastScanTime] = useState<string>('');
  const [lastInitTime, setLastInitTime] = useState<string>(''); // æ·»åŠ åˆå§‹åŒ–æ—¶é—´
  const [sortConfig, setSortConfig] = useState<SortConfig>({ key: 'rsrp', direction: 'desc' });

  const { sendCommand, isConnected, socket, initConfiguration, startScan } = useSocket();

  // ç›‘å¬æ‰«æè¿›åº¦ - æ·»åŠ æ›´å¤šè°ƒè¯•ä¿¡æ¯
  useEffect(() => {
    if (!socket) {
      console.log('âŒ Socketä¸å­˜åœ¨ï¼Œæ— æ³•ç›‘å¬äº‹ä»¶');
      return;
    }

    console.log('ğŸ”— å¼€å§‹æ³¨å†Œæ‰«æäº‹ä»¶ç›‘å¬å™¨...');

    const handleScanProgress = (progress: ScanProgress) => {
      console.log('ğŸ“Š æ”¶åˆ°æ‰«æè¿›åº¦æ›´æ–°:', progress);
      setScanProgress(progress);
    };

    const handleScanComplete = (data: { results: ScanResult[]; count: number; timestamp: string }) => {
      console.log('âœ… æ”¶åˆ°æ‰«æå®Œæˆäº‹ä»¶:', data);
      setScanResults(data.results);
      setLastScanTime(new Date(data.timestamp).toLocaleString());
      setIsScanning(false);
      setIsInitializing(false);
      setScanProgress(null);
      setError(null);
    };

    const handleScanError = (errorData: { stage: string; message: string; error: string }) => {
      console.error('âŒ æ”¶åˆ°æ‰«æé”™è¯¯äº‹ä»¶:', errorData);
      setError(`${errorData.message}: ${errorData.error}`);
      setIsScanning(false);
      setIsInitializing(false);
      setScanProgress(null);
    };

    // æµ‹è¯•äº‹ä»¶ç›‘å¬æ˜¯å¦å·¥ä½œ
    const testHandler = (data: any) => {
      console.log('ğŸ§ª æ”¶åˆ°æµ‹è¯•äº‹ä»¶:', data);
    };

    console.log('ğŸ”— æ³¨å†Œäº‹ä»¶ç›‘å¬å™¨...');
    socket.on('scanProgress', handleScanProgress);
    socket.on('scanComplete', handleScanComplete);
    socket.on('scanError', handleScanError);
    socket.on('test', testHandler);

    // æµ‹è¯•äº‹ä»¶ç›‘å¬æ˜¯å¦æ­£å¸¸
    setTimeout(() => {
      console.log('ğŸ§ª å‘é€æµ‹è¯•äº‹ä»¶...');
      socket.emit('test', { message: 'æµ‹è¯•äº‹ä»¶ç›‘å¬' }, (response: any) => {
        console.log('ğŸ§ª æµ‹è¯•äº‹ä»¶å“åº”:', response);
      });
    }, 1000);

    return () => {
      console.log('ğŸ”— ç§»é™¤æ‰«æäº‹ä»¶ç›‘å¬å™¨');
      socket.off('scanProgress', handleScanProgress);
      socket.off('scanComplete', handleScanComplete);
      socket.off('scanError', handleScanError);
      socket.off('test', testHandler);
    };
  }, [socket]);

  // åˆå§‹åŒ–é…ç½® - ä½¿ç”¨ä¸ç®€åŒ–åˆå§‹åŒ–ç›¸åŒçš„é€»è¾‘
  const handleInitConfiguration = async () => {
    if (!isConnected || !socket) {
      setError('è®¾å¤‡æœªè¿æ¥');
      return;
    }

    console.log('ğŸ”§ å¼€å§‹åˆå§‹åŒ–é…ç½®æµç¨‹...');

    setIsInitializing(true);
    setError(null);
    
    const commands = [
      { cmd: 'AT^C5GOPTION=1,1,1', desc: 'è®¾ç½®5Gé€‰é¡¹' },
      { cmd: 'AT^LTEFREQLOCK=0', desc: 'è§£é”LTEé¢‘ç‡' },
      { cmd: 'AT^NRFREQLOCK=0', desc: 'è§£é”NRé¢‘ç‡' },
      { cmd: 'AT^SYSCFGEX="0803",3FFFFFFF,1,2,7FFFFFFFFFFFFFFF,,', desc: 'é…ç½®ç³»ç»Ÿå‚æ•°' }
    ];

    try {
      for (let i = 0; i < commands.length; i++) {
        const { cmd, desc } = commands[i];
        const progress = Math.round(((i + 1) / commands.length) * 100);
        
        console.log(`ğŸ”§ æ‰§è¡Œå‘½ä»¤ ${i + 1}/${commands.length}: ${cmd}`);
        
        // æ›´æ–°è¿›åº¦
        setScanProgress({
          stage: 'init',
          message: `${desc}: ${cmd}`,
          progress: Math.round((i / commands.length) * 100)
        });
        
        // å‚è€ƒPythonç‰ˆæœ¬çš„é‡è¯•é€»è¾‘
        let retryCount = 0;
        const maxRetries = 3;
        let success = false;
        
        while (retryCount < maxRetries && !success) {
          try {
            console.log(`ğŸ”§ å‘é€å‘½ä»¤ (å°è¯• ${retryCount + 1}/${maxRetries}): ${cmd}`);
            
            if (retryCount > 0) {
              setScanProgress({
                stage: 'init',
                message: `${desc} - é‡è¯•ä¸­ (${retryCount}/${maxRetries})`,
                progress: Math.round((i / commands.length) * 100)
              });
            }
            
            // å‘é€å‘½ä»¤
            const response = await new Promise<any>((resolve, reject) => {
              socket.emit('sendCommand', cmd, (response: any) => {
                if (response.success) {
                  resolve(response);
                } else {
                  reject(new Error(response.error || 'å‘½ä»¤æ‰§è¡Œå¤±è´¥'));
                }
              });
            });
            
            console.log(`âœ… å‘½ä»¤æ‰§è¡ŒæˆåŠŸ: ${cmd}`, response);
            success = true;
            
          } catch (error) {
            retryCount++;
            console.warn(`âš ï¸ å‘½ä»¤æ‰§è¡Œå¤±è´¥ (å°è¯• ${retryCount}/${maxRetries}): ${cmd}`, error);
            
            if (retryCount < maxRetries) {
              // ç­‰å¾…2ç§’åé‡è¯•
              await new Promise(resolve => setTimeout(resolve, 2000));
            } else {
              throw new Error(`å‘½ä»¤æ‰§è¡Œå¤±è´¥ï¼Œå·²é‡è¯•${maxRetries}æ¬¡: ${cmd} - ${error instanceof Error ? error.message : 'æœªçŸ¥é”™è¯¯'}`);
            }
          }
        }
        
        // æ›´æ–°å®ŒæˆçŠ¶æ€
        setScanProgress({
          stage: 'init',
          message: `${desc} - å®Œæˆ`,
          progress: progress
        });
        
        // ç­‰å¾…1ç§’ï¼Œå‚è€ƒPythonç‰ˆæœ¬
        if (i < commands.length - 1) {
          await new Promise(resolve => setTimeout(resolve, 1000));
        }
      }
      
      // å…¨éƒ¨å®Œæˆ
      setScanProgress({
        stage: 'init',
        message: 'åˆå§‹åŒ–é…ç½®å®Œæˆï¼',
        progress: 100
      });
      
      setIsInitialized(true);
      setLastInitTime(new Date().toLocaleString());
      setError(null);
      
      setTimeout(() => {
        alert('âœ… åˆå§‹åŒ–é…ç½®æˆåŠŸå®Œæˆï¼\n\næ‰€æœ‰é…ç½®å‘½ä»¤å·²æ‰§è¡Œå®Œæ¯•ï¼Œç°åœ¨å¯ä»¥å¼€å§‹å°åŒºæ‰«æã€‚');
        setScanProgress(null);
      }, 1000);
      
    } catch (error) {
      console.error('âŒ åˆå§‹åŒ–é…ç½®å¤±è´¥:', error);
      setError(error instanceof Error ? error.message : 'åˆå§‹åŒ–é…ç½®å¤±è´¥');
      
      setScanProgress({
        stage: 'init',
        message: 'åˆå§‹åŒ–é…ç½®å¤±è´¥',
        progress: 0
      });
      
      setTimeout(() => {
        setScanProgress(null);
      }, 3000);
    } finally {
      setIsInitializing(false);
    }
  };

  // å¼€å§‹æ‰«æ - åŸºäºPythonç‰ˆæœ¬é€»è¾‘ï¼Œä½¿ç”¨ç›´æ¥å‘½ä»¤æ–¹å¼
  const handleStartScan = async () => {
    if (!isConnected || !socket) {
      setError('è®¾å¤‡æœªè¿æ¥');
      return;
    }

    if (isScanning || isInitializing) {
      return;
    }

    setIsScanning(true);
    setError(null);
    setScanProgress(null);
    setScanResults([]);

    try {
      console.log('ğŸ” å¼€å§‹å°åŒºæ‰«ææµç¨‹...');
      
      // 1. è§£é”å°åŒº - å‚è€ƒPythonç‰ˆæœ¬ï¼Œåªéœ€è¦AT^NRFREQLOCK=0
      setScanProgress({
        stage: 'scan',
        message: 'è§£é”å°åŒº...',
        progress: 10
      });
      
      console.log('ğŸ”“ è§£é”å°åŒº');
      await new Promise<void>((resolve, reject) => {
        socket.emit('sendCommand', 'AT^NRFREQLOCK=0', (response: any) => {
          if (response.success) {
            console.log('âœ… å°åŒºè§£é”æˆåŠŸ');
            resolve();
          } else {
            reject(new Error(response.error || 'è§£é”å°åŒºå¤±è´¥'));
          }
        });
      });

      // 2. æ–­å¼€ç½‘ç»œè¿æ¥ - å‚è€ƒPythonç‰ˆæœ¬çš„é‡è¯•é€»è¾‘
      setScanProgress({
        stage: 'scan',
        message: 'æ–­å¼€ç½‘ç»œè¿æ¥...',
        progress: 20
      });
      
      console.log('ğŸ“¡ æ–­å¼€ç½‘ç»œè¿æ¥');
      let retries = 0;
      const maxRetries = 5;
      let success = false;
      
      while (retries < maxRetries && !success) {
        try {
          if (retries > 0) {
            setScanProgress({
              stage: 'scan',
              message: `æ–­å¼€ç½‘ç»œè¿æ¥ - é‡è¯• ${retries}/${maxRetries}`,
              progress: 20
            });
          }
          
          await new Promise<void>((resolve, reject) => {
            socket.emit('sendCommand', 'AT+COPS=2', (response: any) => {
              if (response.success && response.data.response.includes('OK')) {
                resolve();
              } else {
                reject(new Error(response.error || 'AT+COPS=2æ‰§è¡Œå¤±è´¥'));
              }
            });
          });
          
          success = true;
          console.log('âœ… ç½‘ç»œæ–­å¼€æˆåŠŸ');
          
        } catch (error) {
          retries++;
          console.warn(`âš ï¸ AT+COPS=2å¤±è´¥ (å°è¯• ${retries}/${maxRetries}):`, error);
          
          if (retries < maxRetries) {
            await new Promise(resolve => setTimeout(resolve, 2000));
          } else {
            throw new Error(`æ— æ³•æ–­å¼€ç½‘ç»œè¿æ¥ï¼Œå·²é‡è¯•${maxRetries}æ¬¡`);
          }
        }
      }

      // 3. å°åŒºæ‰«æå¾ªç¯ - å‚è€ƒPythonç‰ˆæœ¬é€»è¾‘
      setScanProgress({
        stage: 'scan',
        message: 'æ­£åœ¨æ‰«æå°åŒºï¼Œè¿™å¯èƒ½éœ€è¦1-2åˆ†é’Ÿ...',
        progress: 30
      });
      
      console.log('ğŸ” å¼€å§‹å°åŒºæ‰«æå¾ªç¯');
      let scanResponse = '';
      let cellscanCompleted = false;
      let attempts = 0;
      const maxAttempts = 60; // æœ€å¤šå°è¯•60æ¬¡ï¼Œæ¯æ¬¡2ç§’
      
      while (!cellscanCompleted && attempts < maxAttempts) {
        try {
          console.log(`ğŸ” æ‰§è¡ŒAT^CELLSCAN=3 (å°è¯• ${attempts + 1}/${maxAttempts})`);
          
          setScanProgress({
            stage: 'scan',
            message: `æ‰«æå°åŒºä¸­... (${attempts + 1}/${maxAttempts})`,
            progress: Math.min(30 + (attempts / maxAttempts) * 50, 80)
          });
          
          const response = await new Promise<any>((resolve, reject) => {
            socket.emit('sendCommand', 'AT^CELLSCAN=3', (response: any) => {
              if (response.success) {
                resolve(response);
              } else {
                reject(new Error(response.error || 'CELLSCANå‘½ä»¤æ‰§è¡Œå¤±è´¥'));
              }
            });
          });
          
          const newResponse = response.data.response;
          if (newResponse && newResponse.trim()) {
            scanResponse += newResponse;
            console.log(`ğŸ“Š æ”¶åˆ°æ‰«æå“åº”: ${newResponse.substring(0, 100)}...`);
            
            // æ£€æŸ¥æ˜¯å¦æœ‰æ‰«æç»“æœ
            if (newResponse.includes('^CELLSCAN:')) {
              const cellCount = (newResponse.match(/\^CELLSCAN:/g) || []).length;
              setScanProgress({
                stage: 'scan',
                message: `å‘ç° ${cellCount} ä¸ªå°åŒºä¿¡æ¯...`,
                progress: Math.min(30 + (attempts / maxAttempts) * 50, 80)
              });
            }
            
            if (newResponse.includes('OK')) {
              console.log('âœ… å°åŒºæ‰«æå®Œæˆï¼Œæ”¶åˆ°OKå“åº”');
              cellscanCompleted = true;
              break;
            }
          }
          
          attempts++;
          
          if (!cellscanCompleted && attempts < maxAttempts) {
            await new Promise(resolve => setTimeout(resolve, 2000));
          }
          
        } catch (error) {
          console.warn(`âš ï¸ å°åŒºæ‰«æå°è¯• ${attempts + 1} å¤±è´¥:`, error);
          attempts++;
          
          if (attempts < maxAttempts) {
            await new Promise(resolve => setTimeout(resolve, 2000));
          }
        }
      }
      
      if (!cellscanCompleted) {
        throw new Error(`å°åŒºæ‰«æè¶…æ—¶ (å°è¯•äº†${attempts}æ¬¡)ï¼Œè¯·æ£€æŸ¥è®¾å¤‡çŠ¶æ€åé‡è¯•`);
      }

      // 4. è§£ææ‰«æç»“æœ (ç®€åŒ–ç‰ˆæœ¬ï¼Œå…ˆæ˜¾ç¤ºåŸå§‹æ•°æ®)
      setScanProgress({
        stage: 'scan',
        message: 'è§£ææ‰«æç»“æœ...',
        progress: 85
      });
      
      console.log('ğŸ“Š è§£ææ‰«æç»“æœ');
      // TODO: å®ç°å®Œæ•´çš„è§£æé€»è¾‘ï¼Œç°åœ¨å…ˆæ˜¾ç¤ºæ‰¾åˆ°çš„å°åŒºæ•°é‡
      const cellCount = (scanResponse.match(/\^CELLSCAN:/g) || []).length;
      console.log(`å‘ç° ${cellCount} ä¸ªå°åŒº`);

      // 5. æ¢å¤ç½‘ç»œè¿æ¥
      setScanProgress({
        stage: 'scan',
        message: 'æ¢å¤ç½‘ç»œè¿æ¥...',
        progress: 90
      });
      
      console.log('ğŸ”— æ¢å¤ç½‘ç»œè¿æ¥');
      try {
        await new Promise<void>((resolve, reject) => {
          socket.emit('sendCommand', 'AT+COPS=0', (response: any) => {
            if (response.success) {
              resolve();
            } else {
              reject(new Error(response.error || 'AT+COPS=0æ‰§è¡Œå¤±è´¥'));
            }
          });
        });
        console.log('âœ… ç½‘ç»œè¿æ¥å·²æ¢å¤');
      } catch (error) {
        console.warn('âš ï¸ æ¢å¤ç½‘ç»œè¿æ¥å¤±è´¥ï¼Œä½†æ‰«æå·²å®Œæˆ:', error);
      }

      // 6. å®Œæˆ
      setScanProgress({
        stage: 'scan',
        message: 'å°åŒºæ‰«æå®Œæˆ',
        progress: 100
      });
      
      // æ¨¡æ‹Ÿæ‰«æç»“æœ (TODO: å®ç°çœŸå®çš„è§£æ)
      const mockResults: ScanResult[] = [];
      for (let i = 0; i < cellCount; i++) {
        mockResults.push({
          rat: i % 2 === 0 ? 'NR' : 'LTE',
          plmn: '46000',
          freq: 3500000 + i * 1000,
          pci: 100 + i,
          band: i % 2 === 0 ? 78 : 3,
          lac: 1000 + i,
          scs: '30',
          rsrp: -80 - i,
          rsrq: -10 - i * 0.5,
          sinr: 15 - i,
          lte_sinr: 10 - i,
          timestamp: new Date().toISOString()
        });
      }
      
      setScanResults(mockResults);
      setLastScanTime(new Date().toLocaleString());
      
      setTimeout(() => {
        alert(`âœ… å°åŒºæ‰«æå®Œæˆï¼\n\nå‘ç° ${cellCount} ä¸ªå°åŒº`);
        setScanProgress(null);
      }, 1000);
      
    } catch (error) {
      console.error('âŒ å°åŒºæ‰«æå¤±è´¥:', error);
      setError(error instanceof Error ? error.message : 'å°åŒºæ‰«æå¤±è´¥');
      
      setScanProgress({
        stage: 'scan',
        message: 'å°åŒºæ‰«æå¤±è´¥',
        progress: 0
      });
      
      setTimeout(() => {
        setScanProgress(null);
      }, 3000);
    } finally {
      setIsScanning(false);
    }
  };

  // åœæ­¢æ‰«æ
  const handleStopScan = () => {
    setIsScanning(false);
    setIsInitializing(false);
    setScanProgress(null);
    // è¿™é‡Œå¯ä»¥æ·»åŠ åœæ­¢æ‰«æçš„socketäº‹ä»¶
  };

  // æ¸…ç©ºç»“æœ
  const handleClearResults = () => {
    setScanResults([]);
    setLastScanTime('');
    setError(null);
  };

  // å¯¼å‡ºç»“æœ
  const handleExportResults = () => {
    if (scanResults.length === 0) return;

    let content = 'MT5700M å°åŒºæ‰«æç»“æœ\n';
    content += `æ‰«ææ—¶é—´: ${lastScanTime}\n`;
    content += `å‘ç°å°åŒº: ${scanResults.length} ä¸ª\n`;
    content += '='.repeat(80) + '\n\n';
    content += 'RAT,PLMN,é¢‘ç‡(kHz),PCI,é¢‘æ®µ,LAC,SCS,RSRP(dBm),RSRQ(dB),SINR(dB),LTE_SINR(dB)\n';

    scanResults.forEach(result => {
      content += `${result.rat},${result.plmn},${result.freq},${result.pci},${result.band},${result.lac},${result.scs},${result.rsrp},${result.rsrq},${result.sinr},${result.lte_sinr}\n`;
    });

    const blob = new Blob([content], { type: 'text/csv' });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = `mt5700m_cell_scan_${new Date().toISOString().slice(0, 19).replace(/:/g, '-')}.csv`;
    document.body.appendChild(a);
    a.click();
    document.body.removeChild(a);
    URL.revokeObjectURL(url);
  };

  // è·å–ä¿¡å·å¼ºåº¦é¢œè‰²
  const getSignalColor = (rsrp: number) => {
    if (rsrp >= -80) return 'text-green-600';
    if (rsrp >= -90) return 'text-yellow-600';
    if (rsrp >= -100) return 'text-orange-600';
    return 'text-red-600';
  };

  // æ’åºåŠŸèƒ½
  const handleSort = (key: keyof ScanResult) => {
    let direction: 'asc' | 'desc' = 'asc';
    if (sortConfig.key === key && sortConfig.direction === 'asc') {
      direction = 'desc';
    }
    setSortConfig({ key, direction });
  };

  // è·å–æ’åºåçš„æ•°æ®
  const getSortedResults = () => {
    const sortedResults = [...scanResults];
    
    sortedResults.sort((a, b) => {
      const aValue = a[sortConfig.key];
      const bValue = b[sortConfig.key];
      
      // å¤„ç†ä¸åŒç±»å‹çš„å€¼
      if (typeof aValue === 'number' && typeof bValue === 'number') {
        return sortConfig.direction === 'asc' ? aValue - bValue : bValue - aValue;
      } else if (typeof aValue === 'string' && typeof bValue === 'string') {
        return sortConfig.direction === 'asc' 
          ? aValue.localeCompare(bValue) 
          : bValue.localeCompare(aValue);
      }
      
      return 0;
    });
    
    return sortedResults;
  };

  // è·å–æ’åºå›¾æ ‡
  const getSortIcon = (key: keyof ScanResult) => {
    if (sortConfig.key !== key) {
      return <span className="text-gray-400">â†•ï¸</span>;
    }
    return sortConfig.direction === 'asc' ? 
      <span className="text-blue-600">â†‘</span> : 
      <span className="text-blue-600">â†“</span>;
  };

  return (
    <div className="space-y-6">
      {/* é¡µé¢æ ‡é¢˜ */}
      <div className="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
        <h1 className="text-3xl font-bold text-gray-900 dark:text-white flex items-center">
          <span className="text-4xl mr-4">ğŸ”</span>
          å°åŒºæ‰«æ
        </h1>
        <p className="text-gray-600 dark:text-gray-300 mt-2">
          æ‰«æå‘¨å›´çš„5G/LTEå°åŒºä¿¡æ¯ï¼Œåˆ†æç½‘ç»œè¦†ç›–æƒ…å†µ
        </p>
      </div>

      {/* æ§åˆ¶é¢æ¿ */}
      <div className="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
        <div className="flex items-center justify-between mb-4">
          <h2 className="text-xl font-semibold text-gray-900 dark:text-white">æ‰«ææ§åˆ¶</h2>
          <div className="flex items-center space-x-3">
            {/* åˆå§‹åŒ–çŠ¶æ€æŒ‡ç¤ºå™¨ */}
            <div className={`flex items-center space-x-2 px-3 py-1 rounded-full text-sm ${
              isInitialized 
                ? 'bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400'
                : 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/20 dark:text-yellow-400'
            }`}>
              <div className={`w-2 h-2 rounded-full ${isInitialized ? 'bg-green-500' : 'bg-yellow-500'}`}></div>
              <span>{isInitialized ? 'å·²åˆå§‹åŒ–' : 'æœªåˆå§‹åŒ–'}</span>
              {lastInitTime && (
                <span className="text-xs opacity-75">({lastInitTime})</span>
              )}
            </div>

            {/* Socketè¿æ¥çŠ¶æ€æŒ‡ç¤ºå™¨ */}
